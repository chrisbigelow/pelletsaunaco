---
interface Props {
  title?: string;
  description?: string;
  siteUrl?: string;
}

const { 
  title = 'The Pellet Sauna Co. | P1 Sauna Stove',
  description = 'The P1 isn\'t just another sauna stove — it\'s an entirely new way to sauna. It combines the soulful warmth of a wood-fired sauna with the effortless convenience of electric. No electricians, No woodpiles. Just a perfect Löyly every time.',
  siteUrl = Astro.site?.href || 'https://pelletsauna.com'
} = Astro.props;

const ogImage = new URL('/p1-stove3.png', siteUrl).href;
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    
    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="P1 Pellet Sauna Stove - The World's First Wood Pellet Sauna Stove" />
    <meta property="og:site_name" content="Pellet Sauna Company" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="P1 Pellet Sauna Stove - The World's First Wood Pellet Sauna Stove" />
    
    <!-- LinkedIn (uses Open Graph, but adding additional tags) -->
    <meta property="og:image:secure_url" content={ogImage} />
    
    <!-- Additional Meta Tags -->
    <meta name="author" content="Pellet Sauna Company" />
    <link rel="canonical" href={currentUrl} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+NO:wght@100..400&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Natural wood tones - inspired by sauna wood */
    --wood-natural: #d4a574;
    --wood-light: #e8d5c4;
    --wood-medium: #c89968;
    --wood-warm: #b88a5c;

    /* Blue-gray atmospheric tones */
    --sky-light: #a8b8c4;
    --sky-medium: #8fa3b0;
    --sky-blue: #6b8a9d;
    --mist: #d1dce5;
    --mist-light: #e8eef2;

    /* Sauna stove colors */
    --stove-dark: #3a4145;
    --stove-charcoal: #2d3235;
    --fire-glow: #ff6b4a;
    --fire-orange: #ff8c61;
    --steam-white: #f8fbfd;

    /* Neutrals */
    --white: #ffffff;
    --off-white: #fafcfd;
    --light-gray: #e5eaed;
    --text-dark: #1a1f22;
    --text-medium: #4a5258;

    /* Accent colors */
    --accent-warm: #d4915c;
    --accent-cool: #7a9bb0;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Work Sans', sans-serif;
    background-color: var(--off-white);
    color: var(--text-dark);
    overflow-x: hidden;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
