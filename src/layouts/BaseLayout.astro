---
interface Props {
  title?: string;
  description?: string;
  siteUrl?: string;
}

const {
  title = 'P1 Pellet Sauna Stove | Wood Pellet Powered Sauna Heater',
  description = 'The P1 pellet sauna stove combines wood-fired warmth with modern convenience. Our pellet sauna stove heats in 30 minutes, no electrician needed. The world\'s first wood pellet sauna stove for the perfect LÃ¶yly every time.',
  siteUrl = Astro.site?.href || 'https://pelletsauna.com'
} = Astro.props;

const ogImage = new URL('/p1-stove3.png', siteUrl).href;
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    
    <!-- Primary Meta Tags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="P1 Pellet Sauna Stove - The World's First Wood Pellet Sauna Stove" />
    <meta property="og:site_name" content="Pellet Sauna Company" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="P1 Pellet Sauna Stove - The World's First Wood Pellet Sauna Stove" />
    
    <!-- LinkedIn (uses Open Graph, but adding additional tags) -->
    <meta property="og:image:secure_url" content={ogImage} />
    
    <!-- Additional Meta Tags -->
    <meta name="author" content="Pellet Sauna Company" />
    <link rel="canonical" href={currentUrl} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+NO:wght@100..400&display=swap" rel="stylesheet">

    <!-- Structured Data - Organization -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Pellet Sauna Company",
      "url": "https://pelletsauna.com",
      "logo": "https://pelletsauna.com/p1-stove3.png",
      "description": "Manufacturer of the world's first wood pellet sauna stove. We combine traditional sauna warmth with modern pellet fuel convenience.",
      "sameAs": []
    }
    </script>

    <!-- Structured Data - WebPage -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "P1 Pellet Sauna Stove",
      "url": "https://pelletsauna.com/",
      "description": "Landing page for the P1 Pellet Sauna Stove, the world's first wood pellet sauna stove. Learn about features like 30-minute heat-up time, 300-600 cubic feet capacity, and built-in remote start.",
      "primaryImageOfPage": {
        "@type": "ImageObject",
        "url": "https://pelletsauna.com/p1-stove3.png"
      }
    }
    </script>

    <!-- Structured Data - FAQPage -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is a pellet sauna stove?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "A pellet sauna stove is an innovative sauna heater that uses compressed wood pellets as fuel instead of traditional firewood or electricity. The P1 pellet sauna stove combines the authentic wood-fired sauna experience with modern convenience, offering precise temperature control and easy operation."
          }
        },
        {
          "@type": "Question",
          "name": "How does the P1 pellet sauna stove work?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The P1 pellet sauna stove automatically feeds wood pellets from a built-in hopper into a combustion chamber. An electronic control system manages the pellet feed rate to maintain your desired temperature. You can even start your pellet sauna stove remotely using our app, so your sauna is hot when you arrive."
          }
        },
        {
          "@type": "Question",
          "name": "Why choose a pellet sauna stove over electric or wood-burning?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "A pellet sauna stove offers the best of both worlds: the authentic warmth and ambiance of wood-fired heat without the hassle of chopping and storing firewood, and without the high electrical costs or installation requirements of electric heaters. Wood pellets are also more eco-friendly and cost-effective than other fuel sources."
          }
        },
        {
          "@type": "Question",
          "name": "How long does it take to heat a sauna with a pellet stove?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The P1 pellet sauna stove heats your sauna to optimal temperature in approximately 30 minutes. This is comparable to electric heaters and faster than traditional wood-burning stoves, making it convenient for spontaneous sauna sessions."
          }
        },
        {
          "@type": "Question",
          "name": "What size sauna can the P1 pellet stove heat?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The P1 pellet sauna stove is designed to efficiently heat saunas ranging from 300 to 600 cubic feet. This covers most residential sauna sizes, from compact home saunas to larger family-sized installations."
          }
        },
        {
          "@type": "Question",
          "name": "Are wood pellets easy to find for my pellet sauna stove?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! Wood pellets are widely available at hardware stores, home improvement centers, and online retailers. They're the same pellets used in pellet grills and home heating systems, making them convenient and affordable to purchase year-round."
          }
        }
      ]
    }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Natural wood tones - inspired by sauna wood */
    --wood-natural: #d4a574;
    --wood-light: #e8d5c4;
    --wood-medium: #c89968;
    --wood-warm: #b88a5c;

    /* Blue-gray atmospheric tones */
    --sky-light: #a8b8c4;
    --sky-medium: #8fa3b0;
    --sky-blue: #6b8a9d;
    --mist: #d1dce5;
    --mist-light: #e8eef2;

    /* Sauna stove colors */
    --stove-dark: #3a4145;
    --stove-charcoal: #2d3235;
    --fire-glow: #ff6b4a;
    --fire-orange: #ff8c61;
    --steam-white: #f8fbfd;

    /* Neutrals */
    --white: #ffffff;
    --off-white: #fafcfd;
    --light-gray: #e5eaed;
    --text-dark: #1a1f22;
    --text-medium: #4a5258;

    /* Accent colors */
    --accent-warm: #d4915c;
    --accent-cool: #7a9bb0;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Work Sans', sans-serif;
    background-color: var(--off-white);
    color: var(--text-dark);
    overflow-x: hidden;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
