---
interface Props {
  title?: string;
}

const { title = 'The Pellet Sauna Co. | P1 Sauna Stove' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Natural wood tones - inspired by sauna wood */
    --wood-natural: #d4a574;
    --wood-light: #e8d5c4;
    --wood-medium: #c89968;
    --wood-warm: #b88a5c;

    /* Blue-gray atmospheric tones */
    --sky-light: #a8b8c4;
    --sky-medium: #8fa3b0;
    --sky-blue: #6b8a9d;
    --mist: #d1dce5;
    --mist-light: #e8eef2;

    /* Sauna stove colors */
    --stove-dark: #3a4145;
    --stove-charcoal: #2d3235;
    --fire-glow: #ff6b4a;
    --fire-orange: #ff8c61;
    --steam-white: #f8fbfd;

    /* Neutrals */
    --white: #ffffff;
    --off-white: #fafcfd;
    --light-gray: #e5eaed;
    --text-dark: #1a1f22;
    --text-medium: #4a5258;

    /* Accent colors */
    --accent-warm: #d4915c;
    --accent-cool: #7a9bb0;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--off-white);
    color: var(--text-dark);
    overflow-x: hidden;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
