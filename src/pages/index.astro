<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Navigation */
  .nav {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    right: 1.5rem;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.25rem 2rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    position: relative;
  }

  .brand {
    font-family: 'Playwrite NO', cursive;
    font-size: 1.25rem;
    font-weight: 900;
    color: var(--text-dark);
    text-shadow: 0.5px 0.5px 0px rgba(0, 0, 0, 0.1);
    text-align: center;
    line-height: 1.1;
    grid-column: 2;
    justify-self: center;
  }

  .menu-toggle {
    grid-column: 1;
    justify-self: start;
    position: absolute;
    left: 2rem;
  }

  .btn-preorder {
    grid-column: 3;
    justify-self: end;
    position: absolute;
    right: 2rem;
  }

  .menu-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 0.5rem;
    z-index: 1001;
  }

  .menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--text-dark);
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  .nav-links {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-radius: 0 0 16px 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-top: none;
    padding: 1rem 0;
    min-width: 180px;
    display: none;
    flex-direction: column;
    gap: 0;
    margin-top: 0;
    z-index: 1000;
  }

  .nav-links.active {
    display: flex;
  }

  /* Remove bottom border-radius from navbar when dropdown is active */
  .nav:has(.nav-links.active),
  .nav.dropdown-active {
    border-radius: 16px 16px 0 0;
  }

  .nav-links .nav-link {
    padding: 0.75rem 2rem;
    display: block;
    border-bottom: 1px solid var(--light-gray);
  }

  .nav-links .nav-link:last-child {
    border-bottom: none;
  }

  .nav-links .btn-preorder-mobile {
    margin: 0.5rem 2rem;
    padding: 0.75rem 1.5rem;
    text-align: center;
    border-radius: 8px;
    border-bottom: none;
  }

  .btn-preorder {
    background: #FFD700;
    color: var(--text-dark);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    display: inline-block;
    white-space: nowrap;
  }

  .btn-preorder:hover {
    background: #FFC700;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3);
  }

  .btn-preorder-mobile {
    display: none;
  }

  .nav-link {
    color: var(--text-medium);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--stove-charcoal);
  }

  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    background: linear-gradient(135deg, var(--mist-light) 0%, var(--sky-light) 100%);
    padding: 10rem 2rem 4rem;
    overflow: hidden;
    scroll-margin-top: 120px;
