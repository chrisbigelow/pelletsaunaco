  }

  /* Hero Image */
  .hero-image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: visible;
    width: 100%;
    height: 100%;
    margin-right: 4rem;
  }

  /* Desktop image - hidden on mobile */
  .hero-image-desktop {
    display: flex;
  }

  /* Mobile image - hidden on desktop */
  .hero-image-mobile {
    display: none;
  }

  .product-container {
    position: relative;
    width: 100%;
    max-width: none;
    transform: scale(1.6) translateY(-5%);
    transform-origin: center center;
    margin: 0 auto;
  }

  .product-img {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.15));
  }

  /* Hide placeholder when image loads */
  .product-img:not([src=""]) ~ .product-placeholder {
    display: none;
  }

  .product-placeholder {
    width: 100%;
    aspect-ratio: 1;
    background: linear-gradient(135deg, var(--sky-medium) 0%, var(--wood-light) 100%);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px dashed rgba(0, 0, 0, 0.1);
  }

  .placeholder-content {
    text-align: center;
    color: var(--text-dark);
    padding: 2rem;
  }

  .placeholder-icon {
    font-size: 4rem;
    display: block;
    margin-bottom: 1rem;
  }

  .placeholder-content code {
    background: rgba(255, 255, 255, 0.5);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  /* Floating Card */
  .floating-card {
    position: absolute;
    bottom: 6rem;
    right: 4rem;
    background: white;
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    max-width: 250px;
    z-index: 3;
  }

  .card-badge {
    display: inline-block;
    background: var(--fire-glow);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  .floating-card h3 {
    font-size: 1.25rem;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
  }

  .floating-card p {
    color: var(--text-medium);
    font-size: 0.9rem;
  }

  /* Shared Container Styles */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

