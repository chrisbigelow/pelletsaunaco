<script>
  const menuToggle = document.getElementById('menuToggle');
  const navLinks = document.getElementById('navLinks');
  const nav = document.querySelector('.nav');

  const updateNavState = () => {
    if (navLinks?.classList.contains('active')) {
      nav?.classList.add('dropdown-active');
    } else {
      nav?.classList.remove('dropdown-active');
    }
  };

  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    navLinks?.classList.toggle('active');
    updateNavState();
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (menuToggle && navLinks && !menuToggle.contains(e.target) && !navLinks.contains(e.target)) {
      menuToggle.classList.remove('active');
      navLinks.classList.remove('active');
      updateNavState();
    }
  });

  // Close dropdown when clicking a link or button
  navLinks?.querySelectorAll('.nav-link, .btn-preorder-mobile').forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      navLinks?.classList.remove('active');
      updateNavState();
    });
  });

  // Contact form submission
  const contactForm = document.getElementById('contactForm');
  const submitBtn = document.getElementById('submitBtn');
  const formMessage = document.getElementById('formMessage');

  contactForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Disable submit button
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    formMessage.style.display = 'none';

    try {
      const formData = new FormData(contactForm);
      
      // Spam protection: Check honeypot field
      const botcheck = formData.get('botcheck');
      if (botcheck) {
        // Bot detected - silently reject
        formMessage.textContent = 'Spam detected. If you are human, please try again.';
        formMessage.className = 'form-message error';
        formMessage.style.display = 'block';
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Message';
        return;
      }
      
      // Add the subject from the form_subject field to the email subject
      const formSubject = formData.get('form_subject');
      if (formSubject) {
        formData.set('subject', `New Contact Form Submission: ${formSubject}`);
      }

      const response = await fetch('https://api.web3forms.com/submit', {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        formMessage.textContent = 'Thank you! Your message has been sent successfully.';
        formMessage.className = 'form-message success';
        formMessage.style.display = 'block';
        contactForm.reset();
      } else {
        throw new Error(data.message || 'Something went wrong');
      }
    } catch (error) {
      formMessage.textContent = 'Sorry, there was an error sending your message. Please try again or contact us directly.';
      formMessage.className = 'form-message error';
      formMessage.style.display = 'block';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Send Message';
    }
  });
</script>
